<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- Global log path -->
	<property name="LOG_PATH" value="/opt/tomcat/webapps/xtremand-logs/" />

	<!-- Log pattern used across appenders -->
	<property name="LOG_PATTERN"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

	<!-- Console appender for local dev -->
	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<!-- INFO log file appender -->
	<appender name="INFO_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/info.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/info-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>30</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

	<!-- ERROR log file appender -->
	<appender name="ERROR_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/error.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/error-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>30</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>

	<!-- DEBUG log file appender -->
	<appender name="DEBUG_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/debug.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/debug-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>15</maxHistory>
			<totalSizeCap>500MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

	<!-- Combined log file appender -->
	<appender name="COMBINED_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/combined.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/combined-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<maxFileSize>20MB</maxFileSize>
			<maxHistory>30</maxHistory>
			<totalSizeCap>2GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<!-- Async wrapper for performance -->
	<appender name="ASYNC_COMBINED"
		class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="COMBINED_FILE" />
	</appender>
	<appender name="ASYNC_INFO"
		class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="INFO_FILE" />
	</appender>
	<appender name="ASYNC_ERROR"
		class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="ERROR_FILE" />
	</appender>
	<appender name="ASYNC_DEBUG"
		class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="DEBUG_FILE" />
	</appender>

	<!-- Spring-specific logger -->
	<logger name="org.springframework" level="INFO" />

	<!-- Dev profile adds console logging -->
	<springProfile name="local,dev">
		<root level="DEBUG">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="ASYNC_INFO" />
			<appender-ref ref="ASYNC_ERROR" />
			<appender-ref ref="ASYNC_DEBUG" />
			<appender-ref ref="ASYNC_COMBINED" />
		</root>
	</springProfile>

	<!-- Production profile skips debug -->
	<springProfile name="prod,qa">
		<root level="INFO">
			<appender-ref ref="ASYNC_INFO" />
			<appender-ref ref="ASYNC_ERROR" />
			<appender-ref ref="ASYNC_COMBINED" />
		</root>
	</springProfile>

</configuration>
